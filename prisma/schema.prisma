datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ------------------- Usuarios -------------------
model User {
  id           Int                @id @default(autoincrement())
  name         String             @unique
  pin          String
  createdAt    DateTime           @default(now())

  routines     Routine[]
  sessions     TrainingSession[]
}

// ------------------- Ejercicios -------------------
model Exercise {
  id          Int                       @id @default(autoincrement())
  name        String
  imageUrl    String?
  sets        RoutineSet[]              @relation("ExerciseToRoutineSet")
  logs        TrainingSessionExercise[]
  muscleGroupId Int?
  muscleGroup  MuscleGroup?              @relation(fields: [muscleGroupId], references: [id])
}

// ------------------- Grupos musculares -------------------
model MuscleGroup {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  exercises Exercise[]
}

// ------------------- Rutinas -------------------
model Routine {
  id          Int           @id @default(autoincrement())
  name        String
  createdAt   DateTime       @default(now())

  userId      Int
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  sets        RoutineSet[]
}

// ------------------- Sets de la rutina -------------------
model RoutineSet {
  id           Int       @id @default(autoincrement())
  series       Int
  repetitions  Int
  description  String?

  routineId    Int
  exerciseId   Int

  routine      Routine   @relation(fields: [routineId], references: [id], onDelete: Cascade)
  exercise     Exercise  @relation("ExerciseToRoutineSet", fields: [exerciseId], references: [id])
}

// ------------------- Sesiones de entrenamiento -------------------
model TrainingSession {
  id          Int                         @id @default(autoincrement())
  date        DateTime                    @default(now())
  userId      Int
  routineName String                      // snapshot del nombre de la rutina
  notes       String?

  user        User                        @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessionExercises TrainingSessionExercise[]
}

// ------------------- Ejercicios realizados en la sesión -------------------
model TrainingSessionExercise {
  id            Int        @id @default(autoincrement())
  exerciseId    Int
  seriesNumber  Int
  sessionId     Int

  exercise      Exercise         @relation(fields: [exerciseId], references: [id])
  session       TrainingSession  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  repetitions   Repetition[]
}

// ------------------- Repeticiones individuales -------------------
model Repetition {
  id                         Int        @id @default(autoincrement())
  trainingSessionExerciseId  Int
  weight                     Float?
  completed                  Boolean    // true si la repetición fue completada correctamente
  notes                      String?

  exerciseInSession           TrainingSessionExercise @relation(fields: [trainingSessionExerciseId], references: [id], onDelete: Cascade)
}