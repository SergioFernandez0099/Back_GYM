datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

// ------------------- Usuarios -------------------
model User {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  pin       String
  createdAt DateTime @default(now())

  routines Routine[]
  sessions TrainingSession[]
}

// ------------------- Ejercicios -------------------
model Exercise {
  id            Int                       @id @default(autoincrement())
  name          String
  imageUrl      String?
  sets          RoutineSet[]              @relation("ExerciseToRoutineSet")
  logs          TrainingSessionExercise[]
  muscleGroupId Int?
  muscleGroup   MuscleGroup?              @relation(fields: [muscleGroupId], references: [id])
  createdAt     DateTime                  @default(now())
}

// ------------------- Grupos musculares -------------------
model MuscleGroup {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  exercises Exercise[]
  createdAt DateTime   @default(now())
}

// ------------------- Rutinas -------------------
model Routine {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  sets RoutineSet[]
}

// ------------------- Sets de la rutina -------------------
model RoutineSet {
  id          Int      @id @default(autoincrement())
  series      Int
  repetitions Int
  description String?
  order       Int
  routineId   Int
  exerciseId  Int
  createdAt   DateTime @default(now())

  routine  Routine  @relation(fields: [routineId], references: [id], onDelete: Cascade)
  exercise Exercise @relation("ExerciseToRoutineSet", fields: [exerciseId], references: [id])

  @@unique([routineId, order])
}

// ------------------- Unidades (kg, lb, etc.) -------------------
model Unit {
  id        Int      @id @default(autoincrement())
  name      String   @unique // Ej: "kg", "lb", "bodyweight"
  symbol    String? // Ej: "kg", "lb"
  createdAt DateTime @default(now())

  series Series[]
}

// ------------------- Sesiones de entrenamiento -------------------
model TrainingSession {
  id          Int      @id @default(autoincrement())
  date        DateTime @default(now())
  userId      Int
  routineName String // snapshot del nombre de la rutina
  description String?
  createdAt   DateTime @default(now())

  user             User                      @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessionExercises TrainingSessionExercise[]
}

// ------------------- Ejercicios realizados en la sesión -------------------
model TrainingSessionExercise {
  id          Int      @id @default(autoincrement())
  exerciseId  Int
  sessionId   Int
  order       Int
  description String?
  targetreps  Int?
  createdAt   DateTime @default(now())

  exercise Exercise        @relation(fields: [exerciseId], references: [id])
  session  TrainingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  series   Series[]

  @@unique([sessionId, order]) // <-- asegura que no haya dos ejercicios con el mismo order en la misma sesión
}

// ------------------- Series (reemplaza Repetition) -------------------
model Series {
  id                Int @id @default(autoincrement())
  sessionExerciseId Int

  order     Int
  reps      Int // Nº de repeticiones logradas
  weight    Float? // Carga utilizada
  intensity Int? // RPE / %RM / esfuerzo percibido
  rir       Int?
  createdAt DateTime @default(now())

  unitId Int? // Unidad opcional (kg, lb...)

  sessionExercise TrainingSessionExercise @relation(fields: [sessionExerciseId], references: [id], onDelete: Cascade)
  unit            Unit?                   @relation(fields: [unitId], references: [id])

  @@unique([sessionExerciseId, order]) // <--- Esto asegura que no haya dos series con el mismo orden en el mismo ejercicio
}
